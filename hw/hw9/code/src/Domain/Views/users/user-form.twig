<form action="/user/save/" method="post">
	<input id="csrf_token" type="hidden" name="csrf_token" value="{{ csrf_token }}">

	<p>
		<label class="user" for="user-name">Имя:</label>
		<input id="user-name" type="text" name="name" value="{{user_name}}">
	</p>
	<p>
		<label class="user" for="user-lastname">Фамилия:</label>
		<input id="user-lastname" type="text" name="lastname" value="{{user_lastname}}">
	</p>
	<p>
		<label class="user" for="user-birthday">День рождения:</label>
		<input id="user-birthday" type="text" name="birthday" placeholder="ДД-ММ-ГГГГ" value="{{user_birthday | date('d-m-Y') }}">
	</p>
	
	<p>
		<label class="user" for="user-name">Логин:</label>
		<input id="user-login" type="text" name="login" value="{{user_login}}">
	</p>
	
	<p>
		<label class="user" for="user-name">Уровень доступа:</label>
		<input id="user_rank" type="text" name="rank" value="{{user_rank}}">
	</p>
	<p><input type="submit" value="Сохранить"></p>
</form>
